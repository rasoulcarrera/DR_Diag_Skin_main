{
  "hf_dataset_name": "abaryan/ham10000_bbox",
  "train_limit": 500,
  "base_model_name": "Qwen/Qwen2-VL-2B-Instruct",
  "stage1_model_path": "./qwen2vl-skin-diagnosis-hf",
  "output_dir": "./stage2_grpo_output",
  "max_length": 512,
  "report_to": "none",
  
  "training": {
    "num_epochs": 3,
    "batch_size": 8,
    "learning_rate": 2e-5,
    "warmup_steps": 100,
    "weight_decay": 0.01,
    "max_grad_norm": 1.0,
    "save_every": 1,
    "seed": 42
  },
  
  "lora": {
    "use_lora": true,
    "lora_r": 32,
    "lora_alpha": 64,
    "lora_dropout": 0.1,
    "target_modules": ["q_proj", "v_proj", "k_proj", "o_proj", "gate_proj", "up_proj", "down_proj"]
  },
  
  "grpo_settings": {
    "spatial_tolerance": 5,
    "iou_threshold": 0.7,
    "reward_weights": {
      "diagnosis": 0.5,
      "spatial": 0.3,
      "segmentation": 0.2,
      "quality": 0.1
    }
  }
}
